<android.support.v7.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="Appearance"
        />

    <android.support.v7.preference.SwitchPreferenceCompat
        android:title="Night Mode"
        android:defaultValue="false"
        android:summary="Inverts the image"
        android:key="night_mode"/>

    <android.support.v7.preference.PreferenceCategory
        android:title="Storage"
        />

    <android.support.v7.preference.SwitchPreferenceCompat
        android:title="Offline mode"
        android:defaultValue="true"
        android:summary="Store the loaded images"
        android:key="offline_mode"/>

    <android.support.v7.preference.PreferenceCategory android:title="About App" />

        <android.support.v7.preference.Preference
            android:title="License"
            android:summary="About app licence"
            android:key="license"/>

</android.support.v7.preference.PreferenceScreen>